{{!< default}}

{{!-- The main content area --}}
{{#page}}

    <main id="site-main" class="site-main">
        <header class="masthead">
            {{> navbar }}
            <div class="masthead-background">
                {{#if feature_image}}
                    <figure>
                        <img
                                srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                                sizes="(max-width: 800px) 400px,
                        (max-width: 1170px) 1170px,
                            2000px"
                                src="{{img_url feature_image size="xl"}}"
                                alt="{{title}}"
                        />
                    </figure>
                {{/if}}
            </div>
            <div class="container-fluid h-100">
                <div class="row h-100 align-items-center justify-content-center text-center">
                    <div class="masthead-content">
                        <h1>{{title}}</h1>
                        <hr class="divider my-4">
                        <div class="container">
                            {{content}}
                        </div>
                        <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">Find Out More</a>
                    </div>
                </div>
            </div>
        </header>

        <section class="page-section  d-flex flex-column justify-content-center bg-primary" id="about">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 text-center">
                        <h2 class="text-white mt-0">We've got what you need!</h2>
                        <hr class="divider light my-4">
                        <p class="text-white-50 mb-4">The perfect CMS-backed website. Finally a platform designers and
                            developers will love working on.</p>
                        <a class="btn btn-light btn-xl js-scroll-trigger" href="#services">Get Started!</a>
                    </div>
                </div>
            </div>
        </section>

        <section class="page-section d-flex flex-column justify-content-center" id="services">
            <div class="container">
                <h2 class="text-center mt-0">At Your Service</h2>
                <hr class="divider my-4">
                <div class="row">
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="mt-5">
                            {{> "icons/gears"}}
                            <h3 class="h4 mt-4 mb-2">Fully Customizable</h3>
                            <p class="text-muted mb-0">Get the exact website you want.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="mt-5">
                            {{> "icons/keyboard"}}
                            <h3 class="h4 mt-4 mb-2">Up to Date</h3>
                            <p class="text-muted mb-0">Use modern tools to build your site.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="mt-5">
                            {{> "icons/coffee"}}
                            <h3 class="h4 mt-4 mb-2">Developer Friendly</h3>
                            <p class="text-muted mb-0">Don't make your team hate you by using Wordpress.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="mt-5">
                            {{> "icons/heart"}}
                            <h3 class="h4 mt-4 mb-2">Made with Love</h3>
                            <p class="text-muted mb-0">As everything should be.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="post-cards" class="page-section d-flex flex-column justify-content-center bg-primary">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="text-white mt-0">Here's what's going on</h2>
                    <hr class="divider light my-4">
                </div>
            </div>
            <div class="container">
                <div class="card-deck">
                    <div class="row">
                        {{#get "posts" limit=3}}
                            {{#foreach posts limit=6}}
                                {{> post-card}}
                            {{/foreach}}
                        {{/get}}
                    </div>
                </div>
            </div>
        </section>

        <section class="page-section d-flex flex-column justify-content-center" id="contact">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 text-center">
                        <h2 class="mt-0">Let's Get In Touch!</h2>
                        <hr class="divider my-4">
                        <p class="text-muted mb-5">Ready to start your next project with us? Give us a call or send us
                            an email and we will get back to you as soon as possible!</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 ml-auto text-center mb-5 mb-lg-0 muted">
                        {{> "icons/phone"}}
                        <div class="mt-4">+1 (555) 123-4567</div>
                    </div>
                    <div class="col-lg-4 mr-auto text-center muted">
                        {{> "icons/envelope"}}
                        <a class="d-block mt-4" href="mailto:contact@yourwebsite.com">contact@yourwebsite.com</a>
                    </div>
                </div>
            </div>
        </section>
    </main>

    {{> footer }}

{{/page}}
