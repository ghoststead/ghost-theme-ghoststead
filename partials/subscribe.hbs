<div class="position-fixed top-0 p-4 w-100 text-center text-white bg-success subscribe-notification subscribe-success-message"
     data-autohide="false">
    <a class="btn-close btn-close-white float-end subscribe-close-button" href="javascript:"></a>
    You've successfully subscribed to {{@site.title}}!
</div>
<div class="position-fixed top-0 p-4 w-100 text-center text-white bg-danger subscribe-notification subscribe-failure-message">
    <a class="btn-close btn-close-white float-end subscribe-close-button" href="javascript:"></a>
    Could not sign up! Invalid sign up link.
</div>

<div id="subscribe"
     class="subscribe-overlay bg-dark d-flex flex-column justify-content-center align-items-center position-fixed top-0 bottom-0 start-0 end-0">
    <nav class="navbar fixed-top subscribe-overlay-header">
        <div class="container container-lg py-4">
            {{#if @site.logo}}
                <img class="subscribe-overlay-logo" height="32" src="{{@site.logo}}"
                     alt="{{@site.title}}"/>
            {{else}}
                <p>{{@site.title}}</p>
            {{/if}}
            <a class="btn-close btn-close-white subscribe-close-button fs-5" href="#"></a>
        </div>
    </nav>
    <div class="text-white text-center subscribe-overlay-content">
        <div class="subscribe-form">
            <h1 class="mb-3 text-white subscribe-overlay-title">Subscribe to {{@site.title}}</h1>
            <p class="subscribe-overlay-description">Stay up to date! Get all the latest & greatest posts delivered straight to your inbox</p>
            <form data-members-form="subscribe">
                <div class="form-group d-flex mt-5 mb-3">
                    <input class="form-control flex-grow-1 me-2 subscribe-email" data-members-email=""
                           placeholder="youremail@example.com"
                           autocomplete="false">
                    <button class="btn btn-info d-flex justify-content-center align-items-center"
                            style="min-width: 100px" type="submit">
                        <span class="button-content">Subscribe</span>
                        <span class="button-loader spinner-border spinner-border-sm" role="status"></span>
                    </button>
                </div>
                <div class="text-success message-success">
                    <strong>Great!</strong> Check your inbox and click the link to confirm your subscription.
                </div>
                <div class="text-danger message-error">
                    Please enter a valid email address!
                </div>
            </form>
        </div>
    </div>
</div>