<div class="card subscribe-form">
    <div class="card-body">
        <form class="d-flex flex-row mb-2 p-1 bg-white input-group" data-members-form="subscribe">
            <div class="form-group input-group">
                <input class="subscribe-email form-control rounded-0 border-0" data-members-email placeholder="youremail@example.com" autocomplete="false" />
                <button class="button primary btn btn-primary btn btn-secondary flex-shrink-0 rounded-0" type="submit">
                    <span class="button-content">Get Started</span>
                    <span class="button-loader spinner-border text-light"></span>
                </button>
            </div>
            <div class="message-success text-success mt-3">
                <strong>Great!</strong> Check your inbox and click the link to confirm your subscription.
            </div>
            <div class="message-error text-danger mt-3">
                Please enter a valid email address!
            </div>
        </form>
    </div>
</div>
