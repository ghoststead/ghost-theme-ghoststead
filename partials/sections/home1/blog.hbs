<section id="blog" class="section">
    <div class="container">
        <div class="row justify-content-center text-center section-title">
            <div class="col-lg-8 col-xl-6">
                <h3 class="h1 after-50px bg-primary-after">Daily updates</h3>
                <p>GhostStead is a multipurpose Ghost theme based on Sass and Bootstrap 5 to help you build the perfect site.</p>
            </div>
        </div>
        <div class="row">
            {{#get "posts" order="published_at desc" include="authors" limit="4"}}
            {{#foreach posts}}
            <div class="col-md-6 col-lg-3 my-3">
                <div class="blog-grid">
                    <div class="blog-grid-img">
                        <a href="{{url}}">
                            {{#if feature_image}}
                                <img src="{{img_url feature_image}}" title="" alt="">
                            {{else}}
                                <img src="{{asset "images/900x550.jpg"}}" title="" alt="">
                            {{/if}}
                        </a>
                    </div>
                    <div class="blog-gird-info">
                        <div class="b-meta">
                            <span class="date"><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time></span>
                        </div>
                        <h5><a href="{{url}}">{{title}}</a></h5>
                        <p class="paragraph-overflow">{{excerpt words="10"}}</p>
                        <div class="btn-grid">
                            <a class="btn btn-sm btn-primary" href="{{url}}">Read more</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/foreach}}
            {{/get}}
        </div>
    </div>
</section>
