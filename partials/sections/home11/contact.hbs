<section class="py-6 py-md-9 py-lg-11 effect-section pt-0 bg-gray-100 border-style bottom light">
    <div class="effect effect-bg-40 bottom bg-dark"></div>
    <div class="container position-relative">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="shadow-lg bg-white p-6 p-md-8 rounded border-top border-3 border-primary">
                    <h3 class="h4 mb-6">Schedule a demo with us</h3>
                    <form data-form-type="contact" novalidate="novalidate">
                        <div class="mb-4">
                            <input id="contact-name" type="text" name="name" placeholder="Name" data-constraints="@Required" class="form-control form-control-has-validation form-control-last-child"><span class="invalid-feedback"></span>
                        </div>
                        <div class="mb-4">
                            <input id="contact-email" type="email" name="email" placeholder="Email" data-constraints="@Required" class="form-control form-control-has-validation form-control-last-child"><span class="invalid-feedback"></span>
                        </div>
                        <div class="mb-4">
                            <textarea class="form-control form-control-has-validation form-control-last-child" id="contact-message" name="message" rows="5" placeholder="Your Comments" data-constraints="@Required"></textarea><span class="invalid-feedback"></span>
                        </div>
                        <div class="form-action">
                            <input name="location" type="hidden" value="{{@site.url}}/thank-you">
                            <button class="btn btn-primary w-100" type="submit">Get in touch</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
