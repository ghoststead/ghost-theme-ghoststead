<section id="blog" class="section bg-gray-100">
    <div class="container">
        <div class="row justify-content-center text-center section-title">
            <div class="col-lg-8 col-xl-6">
                <label class="border-bottom border-2 text-uppercase font-w-600 text-primary border-info">Our Blog</label>
                <h3 class="h1 m-0">Checkout our latest blogs</h3>
            </div>
        </div>
        <div class="row">
            {{#get "posts" order="published_at desc" include="authors" limit="4"}}
            {{#foreach posts}}
            <div class="col-md-6 col-lg-3 my-3">
                <div class="position-relative">
                    <div>
                        {{#if feature_image}}
                            <img class="rounded" src="{{img_url feature_image}}" title="" alt="">
                        {{else}}
                            <img class="rounded" src="{{asset "images/900x550.jpg"}}" title="" alt="">
                        {{/if}}
                    </div>
                    <div class="pt-3">
                        <div class="small pb-1">
                            <span class="date"><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time></span>
                        </div>
                        <h5>{{title}}</h5>
                        <p class="paragraph-overflow">{{excerpt words="10"}}</p>
                        <div class="btn-grid">
                            <a class="btn btn-sm btn-primary stretched-link" href="{{url}}">Read more</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/foreach}}
            {{/get}}
        </div>
    </div>
</section>
