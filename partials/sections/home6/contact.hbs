<section class="section">
    <div class="container">
        <div class="row justify-content-center text-center section-title">
            <div class="col-lg-8 col-xl-6">
                <label class="border-bottom-2 text-uppercase font-w-600 text-primary border-secondary">Contact</label>
                <h3 class="h1 m-0">let's start working together</h3>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 my-3">
                <div class="bg-white shadow p-4 p-lg-6">
                    <div class="pb-4">
                        <h5 class="m-0">Contact Us</h5>
                    </div>
                    <form data-form-output="form-output-global" data-form-type="contact" method="post" action="">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-control-label">Name</label>
                                    <input id="contact-name" type="text" name="name" placeholder="Rachel Roth" data-constraints="@Required" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-control-label">Email address</label>
                                    <input id="contact-email" type="email" name="email" placeholder="name@example.com" data-constraints="@Required" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="mb-4">
                                    <label class="form-control-label">Comment</label>
                                    <textarea class="form-control" id="contact-message" name="message" rows="3" placeholder="Hi there, I would like to ..." data-constraints="@Required"></textarea>
                                </div>
                            </div>
                            <div class="col-md-12 p-10px-t">
                                <button class="btn btn-primary" type="submit" name="send">Create my account</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 my-3">
                <div class="border-all-10 border-white py-5 px-4 bg-primary shadow h-100 ml-xl-6">
                    <h5 class="lead-sm text-white mb-2">Our Address Info</h5>
                    <p class="text-white-light mb-5">2 Embarcadero Center, San Francisco, CA 94111 USA</p>
                    <h5 class="lead-sm text-white mb-2">Our Contact Info</h5>
                    <p class="mb-2 links-white"><a href="mailto:support@domain.com">support@domain.com</a></p>
                    <p class="m-0 links-white"><a href="tel:+1 (760) 678-4580">+1 (760) 678-4580</a></p>

                    <h5 class="lead-sm text-white mb-2 mt-5">Follow Us</h5>
                    <div class="social-icon si-30 white radius nav">
                        <a href="#">{{> icons/themify/facebook}}</a>
                        <a href="#">{{> icons/themify/twitter-alt}}</a>
                        <a href="#">{{> icons/themify/linkedin}}</a>
                        <a href="#">{{> icons/themify/instagram}}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
