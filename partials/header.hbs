<header id="main-header">
    <nav class="navbar navbar-nav navbar-{{#>flavor}}dark{{/flavor}} navbar-expand-lg fixed-top py-0">
        <div class="container container-lg">
            <div class="navbar-brand">
                {{#if @site.logo}}
                    <a class="navbar-brand logo" href="{{@site.url}}">
                        <img height="32" src="{{@site.logo}}" alt="{{@site.title}}"/>
                    </a>
                {{else}}
                    <a class="navbar-brand" href="{{@site.url}}">{{@site.title}}</a>
                {{/if}}
            </div>
            <div class="order-lg-last d-flex align-items-center py-3 py-lg-0">
                <div class="d-none d-md-block">
                    <a class="btn btn-info text-nowrap text-light" href="#subscribe">Subscribe</a>
                </div>
                <button type="button" class="navbar-toggler collapsed ms-2" data-bs-toggle="collapse"
                        data-bs-target="#navbar-collapse-toggle" aria-expanded="false">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-collapse-toggle">
                <ul class="nav navbar-nav m-auto">
                    <li class="nav-item mm-in mm-mega">
                        <a class="nav-link py-lg-4" href="#">Pages</a>
                        <i class="px-nav-toggle" type="button" data-bs-toggle="dropdown"
                           aria-expanded="false">{{> icons/bootstrap/chevron-down}}</i>
                        <div class="mm-mega-menu mm-drop-in dropdown-menu">
                            <div class="row no-gutters">
                                <div class="col-lg-4 d-none d-lg-block">
                                    <div class="h-100 mm-left"
                                         style="background-image: url({{asset "images/mega-menu.svg"}}); "></div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="mm-right">
                                        <div class="row row-cols-1 row-cols-lg-3">
                                            {{#get "pages" limit="all" order="title asc"}}
                                                {{#foreach pages}}
                                                    <div class="col mb-2"><a class="text-dark" href="{{url}}">{{title}}</a></div>
                                                {{/foreach}}
                                            {{/get}}
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- row -->
                        </div>
                    </li>

                    {{!--
                    <li class="nav-item"><a class="nav-link py-lg-4" href="#about">About</a></li>
                    <li class="nav-item"><a class="nav-link py-lg-4" href="#features">Features</a></li>
                    <li class="nav-item"><a class="nav-link py-lg-4" href="#team">Team</a></li>
                    <li class="nav-item"><a class="nav-link py-lg-4" href="#price">Pricing</a></li>
                    <li class="nav-item"><a class="nav-link py-lg-4" href="/blog" data-bs-target="#blog">Blog</a></li>
                    <li class="nav-item"><a class="nav-link py-lg-4" href="/contact"
                                            data-bs-target="#contact">Contact</a>
                    </li>
                    --}}

                    {{navigation}}
                </ul>
            </div>
        </div>
    </nav>

    <script>
        (function () {
            "use strict";

            let header = document.getElementById('main-header');
            window.addEventListener('scroll', function () {
                if (window.scrollY > 50) {
                    header.children[0].classList.add('bg-primary');
                    header.classList.add('fixed-header');
                } else {
                    header.children[0].classList.remove('bg-primary');
                    header.classList.remove('fixed-header');
                }
            });
        })();
    </script>
</header>
