{{> feature-background}}
    <div class="container h-100 d-flex align-content-center">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-4 mb-4 text-white">{{title}}</h1>

                {{#if custom_excerpt}}
                    <p class="lead m-0 text-white">{{custom_excerpt}}</p>
                {{/if}}

                <div class="d-none d-md-flex align-items-center mt-4 justify-content-center text-left">
                    <div class="avatar-50">
                        {{#if profile_image}}
                            <img class="author-profile-image" src="{{img_url profile_image size="xs"}}" alt="{{name}}"/>
                        {{else}}
                            <div class="author-profile-image">{{> "icons/avatar"}}</div>
                        {{/if}}
                    </div>
                    {{#primary_author}}
                        <div class="pl-3">
                            <p class="my-0"><a class="h6 text-white" href="{{url}}">{{name}}</a></p>
                        </div>
                    {{/primary_author}}
                </div>
            </div>
        </div>
    </div>
</div>
